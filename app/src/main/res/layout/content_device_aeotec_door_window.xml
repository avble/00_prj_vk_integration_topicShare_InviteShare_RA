<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_device_type_sensor_ir_sec_safety_aeotec_door_window">
    <!--tools:context="remote.service.verik.com.remoteaccess.DeviceTypeProtocol">-->


    <TextView
        android:id="@+id/sensor_ir_sec_safety_aeotec_door_window_device_name"
        android:layout_width="550px"
        android:layout_height="wrap_content"
        android:text="Z-Wave light bulb"
        android:layout_marginTop="35px"
        android:layout_marginLeft="20px"
        android:textSize="50px"/>

    <ImageView
        android:id="@+id/sensor_ir_sec_safety_aeotec_door_window_bulb"
        android:layout_width="100px"
        android:layout_height="100px"
        android:src="@drawable/bulb_off"
        android:layout_marginLeft="20px"
        android:layout_marginTop="10px"
        android:layout_marginBottom="10px"
        android:layout_toRightOf="@+id/sensor_ir_sec_safety_aeotec_door_window_device_name"
        />


    <ScrollView
        android:id="@+id/ScrlView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/sensor_ir_sec_safety_aeotec_door_window_device_name">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="40dp">
        <!--android:layout_below="@id/sensor_ir_sec_safety_aeotec_door_window_device_name">-->




        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15px" >

            <TextView
                android:id="@+id/sensor_ir_sec_safety_aeotec_door_window_tw_setting"
                android:layout_width="500px"
                android:layout_height="wrap_content"
                android:text="CONFIGURATION"
                android:textAppearance="?android:attr/textAppearanceLarge" />

        </TableRow>



        <TableRow
            android:id="@+id/tableRow81"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10px" >

            <CheckBox android:id="@+id/sensor_ir_sec_safety_aeotec_door_window_cb_basic_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Basic Set" />


        </TableRow>


        <TableRow
            android:id="@+id/tableRow82"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10px" >

            <CheckBox android:id="@+id/sensor_ir_sec_safety_aeotec_door_window_cb_bainary_sensor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Binary sensor" />
        </TableRow>



        <TableRow
            android:id="@+id/tableRow51"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15px" >

            <TextView
                android:id="@+id/sensor_ir_sec_safety_aeotec_door_window_tw_determines"
                android:layout_width="500px"
                android:layout_height="wrap_content"
                android:text="DETERMINES"
                android:textAppearance="?android:attr/textAppearance" />

        </TableRow>


        <TableRow
            android:id="@+id/tableRow83"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10px"
            android:paddingLeft="40px">

            <CheckBox android:id="@+id/sensor_ir_sec_safety_aeotec_door_window_cb_determines_basic_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Basic Set" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow84"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10px"
            android:paddingLeft="40px">

            <CheckBox android:id="@+id/sensor_ir_sec_safety_aeotec_door_window_cb_determines_binary_sensor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Binary Sensor" />
        </TableRow>



        <TableRow
            android:id="@+id/tableRow511"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15px" >

            <TextView
                android:id="@+id/sensor_ir_sec_safety_aeotec_door_window_tw_association"
                android:layout_width="500px"
                android:layout_height="wrap_content"
                android:text="ASSOCIATION"
                android:textAppearance="?android:attr/textAppearanceLarge" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow52"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1px" >


            <CheckBox
                android:id="@+id/sensor_ir_sec_safety_aeotec_door_window_cb_association_add_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Enable Notification" />

        </TableRow>

    </TableLayout>

    </ScrollView>


</RelativeLayout>
