<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_device_type_heavy_duty_smart"
    tools:context="remote.service.verik.com.remoteaccess.DeviceTypeHeavyDutySmart">

    <TextView
        android:id="@+id/heavy_duty_smart_device_name"
        android:layout_width="550px"
        android:layout_height="wrap_content"
        android:text="Z-Wave light bulb"
        android:layout_marginTop="35px"
        android:layout_marginLeft="20px"
        android:textSize="50px"/>

    <ImageView
        android:id="@+id/heavy_duty_smart_bulb"
        android:layout_width="100px"
        android:layout_height="100px"
        android:src="@drawable/bulb_off"
        android:layout_marginLeft="20px"
        android:layout_marginTop="10px"
        android:layout_marginBottom="10px"
        android:layout_toRightOf="@+id/heavy_duty_smart_device_name"
        />


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="40dp"
        android:layout_below="@id/heavy_duty_smart_bulb">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1px" >

            <TextView
                android:id="@+id/heavy_duty_smart_tw_temp"
                android:layout_width="500px"
                android:layout_height="wrap_content"
                android:text="Temp"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <Button
                android:id="@+id/heavy_duty_smart_button_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="1px"
                android:text="TEMP"
                android:textAppearance="?android:attr/textAppearanceSmall"
                />

        </TableRow>
        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1px" >

            <TextView
                android:id="@+id/heavy_duty_smart_tw_humi"
                android:layout_width="500px"
                android:layout_height="wrap_content"
                android:text="Humi"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <Button
                android:id="@+id/heavy_duty_smart_button_humi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="1px"
                android:text="HUMI"
                android:textAppearance="?android:attr/textAppearanceSmall"
                />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1px" >

            <TextView
                android:id="@+id/heavy_duty_smart_tw_meter"
                android:layout_width="500px"
                android:layout_height="wrap_content"
                android:text="Temp"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <Button
                android:id="@+id/heavy_duty_smart_button_meter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="1px"
                android:text="METER"
                android:textAppearance="?android:attr/textAppearanceSmall"
                />

        </TableRow>


    </TableLayout>

</RelativeLayout>
